<!-- activity_contact_us.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A896B2">

    <!-- Colored Header with Text Centered -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp">

        <!-- Colored Header Background -->
        <ImageView
            android:id="@+id/headerBackground"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#805F95"
            tools:ignore="ContentDescription" />

        <!-- Header Text -->
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Contact Us"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <!-- Contact Information Section -->
    <TextView
        android:id="@+id/contactInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Dear user, if you encounter any issue using this app, or want to leave feedback, or even just want to say hi, please use the contact details provided below."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        tools:ignore="HardcodedText,TextContrastCheck,VisualLintLongText" />

    <!-- Contact Card -->
    <RelativeLayout
        android:id="@+id/contactCard"
        android:layout_width="393dp"
        android:layout_height="259dp"
        android:layout_below="@id/contactInfoText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:background="#805F95"
        tools:ignore="TextSizeCheck"> <!-- Set your desired color here -->

        <!-- Contact Information -->

        <TextView
            android:id="@+id/contactInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Contact Information"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_phone"
            android:text="+7366303156"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />

        <!-- Email Address -->
        <TextView
            android:id="@+id/emailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneNumber"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_email"
            android:text="horiyalsadi@gmail.com"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />

        <!-- Address -->
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailAddress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_location"
            android:text="12 Lancelot Road, Stoke Gifford Bristol, BS16 1WG"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />

        <!-- Instagram -->
        <TextView
            android:id="@+id/instaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Insta : istoringmoments"

            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <!-- Image at Bottom Center -->
    <ImageView
        android:id="@+id/bottomCenterImage"
        android:layout_width="89dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:contentDescription="Bottom Center Image"
        android:src="@drawable/mentalhealth"
        tools:ignore="HardcodedText" />

    <!-- back arrow-->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="51dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="586dp"
        android:onClick="goBack"
        android:src="@drawable/ic_back_purple"
        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,UsingOnClickInXml" />

</RelativeLayout>