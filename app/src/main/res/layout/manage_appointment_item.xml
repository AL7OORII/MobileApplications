<!-- appointment_item.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/appointmentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:textSize="16sp"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/appointmentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appointmentDate"
        android:layout_marginTop="8dp"
        android:text="Time: "
        android:textSize="16sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/StudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Name: "
        android:layout_below="@+id/appointmentTime"
        android:textSize="16sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/CounselorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/StudentName"
        android:layout_marginTop="8dp"
        android:text="Counselor Name: "
        android:textSize="16sp"
        android:textColor="#000000" />

    <!-- "Approve" Button -->
    <!-- "Cancel" Button -->

    <Button
        android:id="@+id/btnApproveAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCancelAppointment"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-47dp"
        android:text="Approve" />

    <Button
        android:id="@+id/btnCancelAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CounselorName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="20dp"
        android:text="Cancel" />
</RelativeLayout>
