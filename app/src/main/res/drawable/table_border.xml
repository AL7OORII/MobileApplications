<!-- table_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#D9D9D9" /> <!-- Background color of the table -->
            <corners android:radius="4dp" /> <!-- Corner radius of the table -->
        </shape>
    </item>
    <!-- Vertical line (stroke) between columns -->
    <item android:right="1dp">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Background color of the stroke -->
        </shape>
    </item>
    <!-- Border (stroke) around the table -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
            android:color="#000000" />
        </shape>
    </item>
</layer-list>
